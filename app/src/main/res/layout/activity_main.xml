<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SytemSound"
        android:onClick="playSystemSound"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PlaySound1"
        android:onClick="PlaySound1"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PlaySound2"
        android:onClick="PlaySound2"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="StartRecord"
        android:onClick="StartRecord"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="StopRecord"
        android:onClick="StopRecord"
        />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="playMusic"
        android:onClick="playMusic"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="stopMusic"
        android:onClick="stopMusic"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="resetMusic"
        android:onClick="resetMusic"
        />

</LinearLayout>